#include <stdio.h>

// Define struct Student
struct Student {
    char name[50];
    int roll_no;
    int marks;
};

int main() {
    struct Student s;
    struct Student *ptr = &s;  // Pointer to structure

    // Modify data using pointer
    printf("Enter Name: ");
    scanf("%s", ptr->name);  // using -> operator

    printf("Enter Roll: ");
    scanf("%d", &ptr->roll_no);

    printf("Enter Marks: ");
    scanf("%d", &ptr->marks);

    // Display modified data
    printf("Modified Data: Name: %s | Roll: %d | Marks: %d\n",
           ptr->name, ptr->roll_no, ptr->marks);

    return 0;
}
