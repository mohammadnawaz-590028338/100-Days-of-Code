#include <stdio.h>

int main() {
    int i, j, rows = 4;  // rows for upper half

    // Upper half
    for(i = 1; i <= rows; i++) {
        for(j = 1; j <= (2*i - 1); j++) {
            printf("*");
        }
        printf("\n\n");  // blank line after each row
    }

    // Lower half
    for(i = rows-1; i >= 1; i--) {
        for(j = 1; j <= (2*i - 1); j++) {
            printf("*");
        }
        printf("\n\n");  // blank line after each row
    }

    return 0;
}
