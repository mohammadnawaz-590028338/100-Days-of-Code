#include <stdio.h>

int main() {
    int arr[100], n, i, elem, pos;

    // Input size and elements of sorted array
    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d sorted elements: ", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Element to be inserted
    printf("Enter element to insert: ");
    scanf("%d", &elem);

    // Find position from the end
    i = n - 1;
    while(i >= 0 && arr[i] > elem) {
        arr[i + 1] = arr[i];  // shift element right
        i--;
    }

    arr[i + 1] = elem;  // insert element
    n++;  // size increases

    // Print new array
    printf("Array after insertion: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
