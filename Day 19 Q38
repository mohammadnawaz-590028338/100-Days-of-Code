#include <stdio.h>

int main() {
    int num, sum = 0, digit;

    // Input a number
    printf("Enter a number: ");
    scanf("%d", &num);

    // Loop to extract digits and add them
    while (num > 0) {
        digit = num % 10;   // Get the last digit
        sum += digit;       // Add the digit to sum
        num = num / 10;     // Remove the last digit
    }

    // Display the result
    printf("Sum of digits = %d\n", sum);

    return 0;
}
